<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/authFragment"
        android:name="com.synapse.ui.auth.AuthFragment"
        android:label="Auth">
        <action
            android:id="@+id/action_auth_to_inbox"
            app:destination="@id/inboxFragment"
            app:popUpTo="@id/authFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/inboxFragment"
        android:name="com.synapse.ui.inbox.InboxFragment"
        android:label="Inbox">
        
        <action
            android:id="@+id/action_inbox_to_conversation"
            app:destination="@id/conversationFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        
        <action
            android:id="@+id/action_inbox_to_userPicker"
            app:destination="@id/userPickerFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        
        <action
            android:id="@+id/action_inbox_to_createGroup"
            app:destination="@id/createGroupFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        
        <action
            android:id="@+id/action_inbox_to_settings"
            app:destination="@id/settingsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/conversationFragment"
        android:name="com.synapse.ui.conversation.ConversationFragment"
        android:label="Conversation">
        <argument
            android:name="conversationId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/userPickerFragment"
        android:name="com.synapse.ui.userpicker.UserPickerFragment"
        android:label="User Picker">
        
        <action
            android:id="@+id/action_userPicker_to_conversation"
            app:destination="@id/conversationFragment"
            app:popUpTo="@id/inboxFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        
        <action
            android:id="@+id/action_userPicker_to_createGroup"
            app:destination="@id/createGroupFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/createGroupFragment"
        android:name="com.synapse.ui.creategroup.CreateGroupFragment"
        android:label="Create Group">
        
        <action
            android:id="@+id/action_createGroup_to_conversation"
            app:destination="@id/conversationFragment"
            app:popUpTo="@id/inboxFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.synapse.ui.settings.SettingsFragment"
        android:label="Settings" />

</navigation>

